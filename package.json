{
  "name": "release-please-detect-major-changes",
  "version": "1.0.0",
  "description": "A GitHub Action to detect major version bumps (breaking changes) in release-please PRs",
  "author": "Ben Hodgson",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest",
    "build": "ncc build src/entry.ts --minify --source-map --license licenses.txt",
    "typecheck": "tsc",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci ."
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.14.2",
    "@types/semver": "^7.7.1",
    "@vercel/ncc": "^0.38.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  }
}
